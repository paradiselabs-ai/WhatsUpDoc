{
  "name": "downmarked",
  "version": "0.1.1",
  "description": "WhatsUpDoc: CLI tool for fetching and storing developer documentation locally using MCP protocol",
  "type": "module",
  "bin": {
    "downmarked": "build/cli.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/cli.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.7.9",
    "cheerio": "1.0.0-rc.12",
    "commander": "^11.0.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.31",
    "@types/node": "^20.11.24",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "documentation",
    "cli",
    "markdown",
    "docs",
    "mcp",
    "model-context-protocol",
    "developer-tools",
    "whatsupdoc",
    "developers",
    "doc-files",
    "doc-pages",
    "downmarked"
  ],
  "author": "DeadDeveloper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paradiselabs-ai/WhatsUpDoc.git"
  },
  "bugs": {
    "url": "https://github.com/paradiselabs-ai/WhatsUpDoc/issues"
  },
  "homepage": "https://github.com/paradiselabs-ai/WhatsUpDoc#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
